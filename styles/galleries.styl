.details,.page-description
	position:absolute;
	top:0;
	right:0;
	width:35%;
	margin:60px 0 30px 0;
	padding:20px;
	background:white;
	background:rgba(255,255,255,0.7);
	opacity:0;
	transition(all 1s);

.page-description
	opacity:1;
	margin:0;
	background:none;

.gallery-image
	position:relative;
	height:100%;
	margin:0;
	float:left;
	.image
		width:100%;
		height:100%;
		overflow:hidden;
	img
		width:100%;
		height:100%;
		margin:0 auto;
		background:url('images/loading.gif') 50% 50% no-repeat;
	&:hover
		.details
			opacity:1;	
		.controls
			opacity:1;
		
	&.active
		.controls
			opacity:1;	