.details
	width:25%;
	padding:20px;
	background:white;
	background:rgba(255,255,255,0.7);
	opacity:0;
	transition(all 1s);
	padding-right:size_buttonSize+5;
	text-align:justify;
	text-justify:inter-word;
	float:right;

.details-container
	height:100%
	display:table;
	overflow:hidden;
	width:100%;
	position:absolute;
	top:0;
	left:0;

.details-wrapper
	height:100%;
	width:100%;
	display:table-cell;
	vertical-align:middle;

.gallery-image
	position:relative;
	height:100%;
	margin:0;
	float:left;
	.image
		width:100%;
		height:100%;
		overflow:hidden;
		background:url("images/loading.gif") 50% 50% no-repeat;
	img
		width:100%;
		height:100%;
		margin:0 auto;
	&:hover
		.details
			opacity:1;	
		.controls
			opacity:1;
		
	&.active
		.controls
			opacity:1;	