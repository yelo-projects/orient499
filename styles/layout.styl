.wrapper
	width: size_mainWidth;
	height:100%;
	margin:0 auto;
	position:relative;


.scroll-wrapper
	overflow:hidden;
	margin:0 auto;


.scroll-item
	height:100%;

.page
	float:left;
	overflow:hidden;
	background:white;
	position:relative;

.anchor
	position:absolute;
	margin:0;
	padding:0;
	width:100%;

.nav
	display:table;
	width:100%;
	height:100%;
	top:0;
	left:0;
	a
		display:table-cell;
		vertical-align:middle;
		text-align: center;
		text-transform:uppercase;

.social-links
	float:right;

.social-link
	margin-left:5px;
	&:before
		content:"| "
	&:first-child
		&:before
			content:""
	&:hover
		text-decoration:underline;
