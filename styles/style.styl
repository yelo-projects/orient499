.js
	.details
		opacity:.3;
	.gallery-image
		img
			opacity:0;
			transition all 1s;
			&.loaded
				opacity:1;	
	.scroll-pane
		position:absolute;
		top:0;
		left:0;
		width:100%;
		height:100%;	
	.scroll-item
		position:absolute;
		left:-100%;
		opacity:0;
		transition opacity 1s, left 0s 1s;
		&.active
			left:0;
			transition opacity .5s, left 0s;
			opacity:1;
